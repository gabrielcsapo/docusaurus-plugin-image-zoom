{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "importHelpers": true,
    "module": "es2015",
    "strict": true,
    "target": "es2018",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**"]
}
